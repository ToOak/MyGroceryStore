<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/wcc_color_2" />
            <corners android:radius="7dp" />
            <solid android:color="@color/wcc_color_2" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/blue_pressed_normal" />
            <corners android:radius="7dp" />
            <solid android:color="@color/blue_pressed_normal" />
        </shape>
    </item>

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1px" android:color="@color/blue_pressed" />
            <corners android:radius="7dp" />
            <solid android:color="@color/blue_pressed" />
        </shape>
    </item>


</selector>